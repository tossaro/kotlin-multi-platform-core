<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Chip -->
        <item name="chipStyle">@style/Chip</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/navBar</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:maxWidth">48dp</item>
    </style>

    <!-- Chip -->
    <style name="Chip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/greenLight</item>
        <item name="chipMinHeight">28dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="android:textAppearance">@style/Text.Poppins.Body4.Title</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!--Toolbar-->
    <style name="ToolBarStyle" parent="">
        <item name="android:background">@color/toolbarBackground</item>
        <item name="titleTextAppearance">@style/Text.Poppins.Body1.Bold</item>
    </style>

    <!--Switch-->
    <style name="Switch.DarkSkyBlue" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <!--TabLayout-->
    <style name="TabDefaultTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--App Button-->
    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Poppins">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="Button.Poppins.SolidPrimary">
        <item name="android:background">@drawable/bg_button_primary_solid</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="Button.Poppins.SolidPrimary.Rounded">
        <item name="android:background">@drawable/bg_button_primary_solid_rounded</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="Button.Poppins.StrokePrimary">
        <item name="android:background">@drawable/bg_button_primary_stroke</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Button.Poppins.StrokePrimary.Rounded">
        <item name="android:background">@drawable/bg_button_primary_stroke_rounded</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!--Material Button-->
    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialButton.Poppins">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="MaterialButton.Poppins.SolidPrimary">
        <item name="backgroundColor">@color/primary_button_text_selector</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="MaterialButton.Poppins.SolidPrimary.Rounded">
        <item name="cornerRadius">1000dp</item>
        <item name="rippleColor">@color/greenLight</item>
        <item name="iconTint">@color/onPrimary</item>
        <item name="backgroundColor">@color/primary_button_text_selector</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="MaterialOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialOutlinedButton.Poppins">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="MaterialOutlinedButton.Poppins.StrokePrimary">
        <item name="strokeColor">@color/primary_button_text_selector</item>
        <item name="android:textColor">@color/primary_button_text_selector</item>
    </style>

    <style name="MaterialOutlinedButton.Poppins.StrokePrimary.Rounded">
        <item name="cornerRadius">1000dp</item>
        <item name="rippleColor">@color/primary</item>
        <item name="iconTint">@color/primary</item>
        <item name="strokeColor">@color/primary_button_text_selector</item>
        <item name="android:textColor">@color/primary_button_text_selector</item>
    </style>

    <style name="MaterialOutlinedButton.Poppins.StrokeNegative">
        <item name="strokeColor">@color/negative_button_text_selector</item>
        <item name="android:textColor">@color/negative_button_text_selector</item>
    </style>

    <style name="MaterialOutlinedButton.Poppins.StrokeNegative.Rounded">
        <item name="cornerRadius">1000dp</item>
        <item name="rippleColor">@color/negative20</item>
        <item name="iconTint">@color/negative</item>
        <item name="strokeColor">@color/negative_button_text_selector</item>
        <item name="android:textColor">@color/negative_button_text_selector</item>
    </style>

