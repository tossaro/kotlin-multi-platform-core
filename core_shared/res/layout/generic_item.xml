<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_generic"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/tv_generic_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_generic_full"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:src="@color/grey20" />

                    <View
                        android:id="@+id/v_generic_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient_black"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_generic_title_overlay"
                        style="@style/Text.Poppins.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toTopOf="@id/tv_generic_subtitle_overlay"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_generic_subtitle_overlay"
                        style="@style/Text.Poppins.Body4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="16dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/iv_generic_left"
                        android:layout_width="116dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:src="@color/grey20"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_generic_top"
                        android:layout_width="match_parent"
                        android:layout_height="156dp"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:src="@color/grey20"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_generic_left"
                        app:layout_constraintTop_toBottomOf="@id/iv_generic_top">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/cg_generic_tags_top"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="4dp"
                            android:visibility="gone"
                            app:chipSpacingHorizontal="4dp"
                            app:chipSpacingVertical="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_generic_title"
                            style="@style/Text.Poppins.Body2.SemiBold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/blue100"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cg_generic_tags_top" />

                        <TextView
                            android:id="@+id/tv_generic_subtitle"
                            style="@style/Text.Poppins.Body5.Italic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:drawablePadding="10dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:textColor="@color/grey80"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_generic_title" />

                        <TextView
                            android:id="@+id/tv_generic_description"
                            style="@style/Text.Poppins.Body5.Italic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:drawablePadding="10dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:textColor="@color/grey80"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_generic_subtitle" />

                        <TextView
                            android:id="@+id/tv_generic_price_middle"
                            style="@style/Text.Poppins.Body2.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/secondary"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_generic_discount_middle" />

                        <TextView
                            android:id="@+id/tv_generic_price_middle_unit"
                            style="@style/Text.Poppins.Body3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/grey100"
                            android:visibility="gone"
                            app:layout_constraintStart_toEndOf="@id/tv_generic_price_middle"
                            app:layout_constraintTop_toBottomOf="@id/tv_generic_discount_middle" />

                        <TextView
                            android:id="@+id/tv_generic_discount_right"
                            style="@style/Text.Poppins.Body4.Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8.5dp"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/grey80"
                            android:visibility="gone"
                            app:layout_constraintEnd_toStartOf="@id/tv_generic_price_right"
                            app:layout_constraintTop_toBottomOf="@id/tv_generic_subtitle" />

                        <TextView
                            android:id="@+id/tv_generic_price_right"
                            style="@style/Text.Poppins.Body2.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/secondary"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_generic_subtitle" />

                        <TextView
                            android:id="@+id/tv_generic_discount_middle"
                            style="@style/Text.Poppins.Body5.Italic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/grey80"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_generic_description" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/cg_generic_tags_bottom"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:visibility="gone"
                            app:chipSpacingHorizontal="4dp"
                            app:chipSpacingVertical="4dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_generic_price_middle" />

                        <TextView
                            android:id="@+id/tv_generic_more_info"
                            style="@style/Text.Poppins.Body4.Bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/primary"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cg_generic_tags_bottom" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_generic_name"
                style="@style/Text.Poppins.Body3.SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/blue100"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_generic" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/shine"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_shine"
            android:visibility="gone"
            android:rotation="20" />

    </RelativeLayout>

</layout>